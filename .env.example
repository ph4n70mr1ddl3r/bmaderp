# Environment Configuration Template for bmaderp

# Database Configuration
DATABASE_URL="postgresql://bmaderp_user:bmaderp_password@localhost:5432/bmaderp_dev?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production-minimum-32-chacters"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-minimum-32-characters"
JWT_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Backend Configuration
NODE_ENV="development"
BACKEND_PORT="3000"
BACKEND_URL="http://localhost:3000"

# Frontend Configuration
FRONTEND_URL="http://localhost:5173"
VITE_API_URL="http://localhost:3000/api"

# CORS Configuration
CORS_ORIGIN="http://localhost:5173"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Logging
LOG_LEVEL="debug"

# AWS Configuration (for production deployment)
AWS_REGION="ap-south-1"
AWS_RDS_ENDPOINT=""
AWS_ELASTICACHE_ENDPOINT=""
AWS_S3_BUCKET=""
AWS_KMS_KEY_ID=""

# Feature Flags
FEATURE_OFFLINE_SYNC="true"
FEATURE_REAL_TIME_NOTIFICATIONS="true"
FEATURE_MULTI_STORE="true"
